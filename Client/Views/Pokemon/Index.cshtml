@{
    Layout = "_LayoutPokemon";
    ViewData["Title"] = "Pokemon";
}

<div class="container mt-5">
    <h1 class="text-black">List Pokemon</h1>
    <table class="table table-dark table-hover mt-2">
        <thead>
            <tr class="text-center">
                <th class="col-1">No</th>
                <th class="col-10">Name</th>
                <th class="col-1">Action</th>
            </tr>
        </thead>
        <tbody id="tbodypokemon">

        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="modalPokemon" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body row">
                <div id="carouselExampleIndicators" class="carousel slide col-md-5" data-bs-ride="carousel">
                    <div class="bg-dark bg-opacity-25">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="" class="d-block w-100" alt="..." id="image-front">
                            </div>
                            <div class="carousel-item">
                                <img src="" class="d-block w-100" alt="..." id="image-back">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <div class="text-center" id="types"></div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-6">
                    <ul class="nav nav-tabs" id="myTabs">
                        <li class="nav-item">
                            <a class="nav-link active" id="tab1" data-bs-toggle="tab" href="#content1">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tab2" data-bs-toggle="tab" href="#content2">Stats</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="content1" class="tab-pane fade show active">
                            <h3 class="mt-2" id="title">Content 1</h3>
                            <p>Ini adalah konten dari Tab 1.</p>
                        </div>
                        <div id="content2" class="tab-pane fade">
                            <h3 class="mt-2">Statistik</h3>
                            <div class="progress">
                                <div class="progress-bar rounded bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" id="hp">HP</div>
                            </div>
                            <div class="progress mt-2">
                                <div class="progress-bar rounded bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" id="attack">Attack</div>
                            </div>
                            <div class="progress mt-2">
                                <div class="progress-bar rounded bg-info progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="defense">Defense</div>
                            </div>
                            <div class="progress mt-2">
                                <div class="progress-bar rounded bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="sattack">Spesial Attack</div>
                            </div>
                            <div class="progress mt-2">
                                <div class="progress-bar rounded bg-info progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="sdefense">Spesial Defense</div>
                            </div>
                            <div class="progress mt-2">
                                <div class="progress-bar rounded bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" id="speed">Speed</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>